<html>
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    <can-import from="bootstrap/less/bootstrap.less!" />
    <can-import from="donejs-example/styles.less!" />
    <can-import from="donejs-example/app" export-as="viewModel" />
		<can-import from="donejs-example/header.component" />
		<can-import from="donejs-example/loader.component" />

		<site-header/>

		<main>
		{{#switch page}}
			{{#case 'home'}}
				<h1>Home</h1>
			{{/case}}
			{{#case 'about'}}
			{{/case}}
			{{#case 'simple-ajax'}}
				<can-import from="donejs-example/simple-ajax/" can-tag="page-loader">
					<simple-ajax/>
				</can-import>
			{{/case}}
			{{#case 'modify-ajax'}}
				<can-import from="donejs-example/modify-ajax/" can-tag="page-loader">
					<modify-ajax/>
				</can-import>
			{{/case}}
		{{/switch}}
		</main>

    {{#switch env.NODE_ENV}}
      {{#case "production"}}
        <script src="{{joinBase 'node_modules/steal/steal.production.js'}}"  main="donejs-example/index.stache!done-autorender"></script>
      {{/case}}
      {{#default}}
        <script src="/node_modules/steal/steal.js"></script>
      {{/default}}
    {{/switch}}
  </body>
</html>
